@model AutomationTracker.Models.AssetModel
@{
    ViewBag.Title = "ViewUnitTypes";
    ViewBag.Menu = "ManageUnitTypes";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}

<section class="common_section">
    <div class="container">

        <div class="container" style="padding-bottom:20px;">
            <input type="button" style="float:right;" class="btn btn-primary" value="Add Unit Type" onclick="location.href='@Url.Action("ManageUnitTypes", "Config", new { id = 0 })'" />
        </div>

        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Unit Type ID</th>
                    <th>Unit Type Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.assetList.unittypeList)
                {
                    <tr>
                        <td>
                            @items.UnitTypeID
                        </td>
                        <td>
                            @Html.ActionLink(items.UnitTypeName, "ManageModels", new { id = items.UnitTypeID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

