    <script src="" type="text/javascript"></script>
    
    
    <style>
        .copyrights{
margin-top:25px;
bottom:0;
width:100%;
position:fixed;
}

/*footer.container-fluid.text-center.foot {
    background: #383838;
}*/

.dark-line{
border-top: 1px solid #525252;
}

.white-txt{
color: #FFF;
}


a.link {
    color: #008acc;
    border: 1px #008acc solid;
    padding: 5px;
    text-decoration: none;
}

a.link:hover {
background: #008acc;
    color: #383838;
}

.footimg{
width: 5rem;
}
    </style>


    @*Validation*@
    <link href="~/js/Validation/SpryAssets/SpryValidationTextField.css" rel="stylesheet" />
    <script src="~/js/Validation/SpryAssets/SpryValidationTextField.js"></script>
    <link href="~/js/Validation/SpryAssets/SpryValidationSelect.css" rel="stylesheet" />
    <script src="~/js/Validation/SpryAssets/SpryValidationSelect.js"></script>

    @*Alertify*@
    <link href="~/js/Alertify/alertify.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Bfrtip',
                "pagingType": "full_numbers",
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
</head>
<body>

    <div>
        <div style="float:left;width:260px;">
            <div class="sidebar" data-color="blue">

                <div class="sidebar-wrapper">
                    <div class="logo">
                        <a href="#" class="simple-text">
                            Automation Tracker
                        </a>
                    </div>
                    <ul class="nav">
                        @if (ViewBag.Menu == null)
                        {
                            <li class="active">
                                <a href="@Url.Action("Dashboard","Account")">
                                    <i class="fa fa-tachometer"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Dashboard","Account")">
                                    <i class="fa fa-tachometer"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                        }
                        @if (ViewBag.Menu != null && ViewBag.Menu == "ViewUsers")
                        {
                            <li class="active">
                                <a href="@Url.Action("ViewUsers","Account")">
                                    <i class="fa fa-users"></i>
                                    <p>User Profile</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("ViewUsers","Account")">
                                    <i class="fa fa-users"></i>
                                    <p>User Profile</p>
                                </a>
                            </li>
                        }


                        @if (ViewBag.Menu != null && ViewBag.Menu == "ViewComputers")
                        {
                            <li class="active">
                                <a href="@Url.Action("ViewComputers","Asset")">
                                    <i class="fa fa-laptop"></i>
                                    <p>Computers</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("ViewComputers","Asset")">
                                    <i class="fa fa-laptop"></i>
                                    <p>Computers</p>
                                </a>
                            </li>
                        }


                        @if (ViewBag.Menu != null && ViewBag.Menu == "ViewMobilePhones")
                        {
                            <li class="active">
                                <a href="@Url.Action("ViewMobilePhones","Asset")">
                                    <i class="fa fa-mobile"></i>
                                    <p>Mobile Phones and Dongles</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("ViewMobilePhones","Asset")">
                                    <i class="fa fa-mobile"></i>
                                    <p>Mobile Phones and Dongles</p>
                                </a>
                            </li>
                        }


                        @if (ViewBag.Menu != null && ViewBag.Menu == "ViewVOIP")
                        {
                            <li class="active">
                                <a href="@Url.Action("ViewVOIP","Asset")">
                                    <i class="fa fa-volume-control-phone"></i>
                                    <p>VOIP</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("ViewVOIP","Asset")">
                                    <i class="fa fa-volume-control-phone"></i>
                                    <p>VOIP</p>
                                </a>
                            </li>
                        }
                        
                        <li>
                            <a href="#">
                                <i class="fa fa-print"></i>
                                <p>Others</p>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-user-plus"></i>
                                <p>Assign Users</p>
                            </a>
                        </li>

                        @if (ViewBag.Menu != null && ViewBag.Menu == "DisposeList")
                        {
                            <li class="active">
                                <a href="@Url.Action("DisposeList","Asset")">
                                    <i class="fa fa-trash-o"></i>
                                    <p>Dispose List</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("DisposeList","Asset")">
                                    <i class="fa fa-trash-o"></i>
                                    <p>Dispose List</p>
                                </a>
                            </li>
                        }

                        @if (ViewBag.Menu != null && ViewBag.Menu == "ViewTransferHistory")
                        {
                            <li class="active">
                                <a href="@Url.Action("ViewTransferHistory","Asset")">
                                    <i class="fa fa-history"></i>
                                    <p>History</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("ViewTransferHistory","Asset")">
                                    <i class="fa fa-history"></i>
                                    <p>History</p>
                                </a>
                            </li>
                        }

                        <li class="active-pro">
                            <a href="@Url.Action("ViewUnitTypes", "Config")">
                                <i class="pe-7s-rocket"></i>
                                <p>Manage Unit Type</p>
                            </a>
                        </li>
                        <li class="active-pro2">
                            <hr />
                            <a href="@Url.Action("ViewModels","Config")">
                                <i class="pe-7s-rocket"></i>
                                <p>Manage Models</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>



        <div style="width:100%; height:auto; float:left">

            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Dashboard</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-dashboard"></i>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["UserID"] != null)
                            {
                                <li>
                                    <a href="#">
                                        Welcome @Session["FullName"].ToString()
                                    </a>
                                </li>

                                <li>
                                    <a href="@Url.Action("Logout","Account")">
                                        Log out
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Index","Account")">
                                        Log In
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            @RenderBody()
        
            <footer class="container-fluid text-center foot">
                <div class="copyrights">
                    <p class="white-txt">
                        Office Automation Tracker © 2017
                    </p>
                    <hr class="dark-line">
                    <a class="link" href="#">Contact Us</a>&nbsp
                    <a class="link" href="#">Privacy Policy</a>&nbsp
                    <a class="link" href="#">Terms & Conditions</a>
                    <br><br>
                    <p class="white-txt small">
                        Proud Product of Walkerstours IT.
                    </p>
                </div>
            </footer>
        </div>





    </div>


    @RenderSection("scriptLocation", false)
    @Html.RenderScripts()
</body>
</html>
