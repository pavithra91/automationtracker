@model AutomationTracker.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="row">
        <div class="pen-title">
            <h1>Office Automation Tracker</h1>
        </div>
        <div class="container">
            <div class="card"></div>
            <div class="card">
                <h1 class="title">Login</h1>
                <form>
                    <div class="input-container">
                        @Html.TextBoxFor(m => Model.Username, new { @name = "Username", @required = "required", @id = "Username" })
                        <label for="Username">Username</label>
                        <div class="bar"></div>
                    </div>
                    <div class="input-container">
                        @Html.TextBoxFor(m => Model.Password, new { @name = "Password", @type = "password", @required = "required", @id = "Password" })                      
                        <label for="Password">Password</label>
                        <div class="bar"></div>
                    </div>
                    <div class="button-container">
                        <button><span>Login</span></button>
                    </div>
                    <div class="footer"><a href="#">Forgot your password?</a></div>
                </form>
            </div>
        </div>
    </div>
</div>
}
