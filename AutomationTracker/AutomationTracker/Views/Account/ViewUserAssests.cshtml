@model AutomationTracker.Models.UserModel
@{
    ViewBag.Title = "ViewUserAssests";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}

<section class="common_section">
    <div class="container">

        @*<div class="container" style="padding-bottom:20px;">
            <input type="button" style="float:right;" class="btn btn-primary" value="Transfer Asset" onclick="location.href='@Url.Action("ManageComputers", "Asset", new { id = 0 })'" />
        </div>*@

        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Category</th>
                    <th>Assest No</th>
                    <th>Serial No</th>
                    <th>User Name</th>
                    <th>PA Number</th>
                    <th>Current User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.userAssestList.ComputerList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.ComputerList)
                    {
                        <tr>
                            <td>
                                @items.AUOTID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssestNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "TransferAsset", new { id = items.AUOTID, category = 1 })
                            </td>
                        </tr>
                    }
                }

                @if (Model.userAssestList.PhoneDongleList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.PhoneDongleList)
                    {
                        <tr>
                            <td>
                                @items.AUOTID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssestNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "TransferAsset", new { id = items.AUOTID, category = 2 })
                            </td>
                        </tr>
                    }
                }

                @if (Model.userAssestList.VOIPList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.VOIPList)
                    {
                        <tr>
                            <td>
                                @items.AUTOID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssetNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "TransferAsset", new { id = items.AUTOID, category = 3 })
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</section>

