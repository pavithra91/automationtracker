@model AutomationTracker.Models.UserModel
@{
    ViewBag.Title = "ViewUserAssests";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}

<section class="common_section">
    <div class="container">

        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Category</th>
                    <th>Assest No</th>
                    <th>Serial No</th>
                    <th>User Name</th>
                    <th>PA Number</th>
                    <th>Current User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.userAssestList.ComputerList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.ComputerList)
                    {
                        <tr>
                            <td>
                                @items.AUOTID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssestNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                <a href="@Url.Action("TransferAsset","Account", new { id = items.AUOTID, category = 1, company = Model.userAssestList.User.Company })" style="margin-left:10px;">
                                    <i class="fa fa-exchange"></i>
                                    Transfer
                                </a>
                            </td>
                        </tr>
                    }
                }

                @if (Model.userAssestList.PhoneDongleList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.PhoneDongleList)
                    {
                        <tr>
                            <td>
                                @items.AUOTID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssestNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                <a href="@Url.Action("TransferAsset","Account", new { id = items.AUOTID, category = 2, company = Model.userAssestList.User.Company })" style="margin-left:10px;">
                                    <i class="fa fa-exchange"></i>
                                    Transfer
                                </a>
                            </td>
                        </tr>
                    }
                }

                @if (Model.userAssestList.VOIPList.Count > 0)
                {
                    foreach (var items in Model.userAssestList.VOIPList)
                    {
                        <tr>
                            <td>
                                @items.AUTOID
                            </td>
                            <td>
                                @items.UnitType1.UnitTypeName
                            </td>
                            <td>
                                @items.AssestNo
                            </td>
                            <td>
                                @items.SerialNo
                            </td>
                            <td>
                                @Model.userAssestList.User.FullName
                            </td>
                            <td>
                                @Model.userAssestList.User.PANo
                            </td>
                            <td>
                                @Model.userAssestList.ActualAssignee.UserID
                            </td>
                            <td>
                                <a href="@Url.Action("TransferAsset","Account", new { id = items.AUTOID, category = 3, company = Model.userAssestList.User.Company })" style="margin-left:10px;">
                                    <i class="fa fa-exchange"></i>
                                    Transfer
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

        <input type="button" style="margin-left:10px" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("ViewUsers", "Account")'" />
    </div>
</section>

@section scriptLocation{

}

